<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_view_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/song_image_icon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/playbutton_single" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title_view"
            style="@style/songTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="song title view" />

        <TextView
            android:id="@+id/song_artist_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="song artist view" />

    </LinearLayout>

</LinearLayout>
